{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "FlatpakApp",
  "description": "A Flatpak application entry.",
  "type": "object",
  "properties": {
    "branch": {
      "description": "Branch (e.g., \"stable\", \"1.2\")",
      "type": [
        "string",
        "null"
      ]
    },
    "commit": {
      "description": "Commit hash",
      "type": [
        "string",
        "null"
      ]
    },
    "id": {
      "description": "Application ID (e.g., \"org.gnome.Calculator\")",
      "type": "string"
    },
    "overrides": {
      "description": "Overrides (e.g. \"--filesystem=home\")",
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string"
      }
    },
    "remote": {
      "description": "Remote name (e.g., \"flathub\")",
      "type": "string"
    },
    "scope": {
      "description": "Installation scope",
      "$ref": "#/$defs/FlatpakScope"
    }
  },
  "required": [
    "id",
    "remote",
    "scope"
  ],
  "$defs": {
    "FlatpakScope": {
      "description": "Scope for Flatpak apps and remotes.",
      "type": "string",
      "enum": [
        "system",
        "user"
      ]
    }
  }
}