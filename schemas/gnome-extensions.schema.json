{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "GnomeExtensionsManifest",
  "description": "The gnome-extensions.json manifest.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": [
        "string",
        "null"
      ]
    },
    "extensions": {
      "description": "List of extension items, either string UUIDs or objects with state",
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/$defs/ExtensionItem"
      }
    }
  },
  "$defs": {
    "ExtensionConfig": {
      "description": "Detailed configuration for an extension.",
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": true
        },
        "id": {
          "type": "string"
        }
      },
      "required": [
        "id"
      ]
    },
    "ExtensionItem": {
      "description": "A GNOME extension entry in the manifest.\nCan be deserialized from either a plain string UUID or a structured object.",
      "anyOf": [
        {
          "description": "Legacy format: Just the UUID (implies enabled = true)",
          "type": "string"
        },
        {
          "description": "Modern format: Object with state",
          "$ref": "#/$defs/ExtensionConfig"
        }
      ]
    }
  }
}