{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HostBinariesManifest",
  "description": "The host-binaries.json manifest.",
  "type": "object",
  "properties": {
    "$schema": {
      "type": ["string", "null"]
    },
    "binaries": {
      "type": "array",
      "default": [],
      "items": {
        "$ref": "#/$defs/HostBinary"
      }
    }
  },
  "$defs": {
    "HostBinary": {
      "type": "object",
      "properties": {
        "name": {
          "description": "Binary name (installed into ~/.local/bin/{name}).",
          "type": "string"
        },
        "source": {
          "$ref": "#/$defs/BinarySource"
        }
      },
      "required": ["name", "source"]
    },
    "BinarySource": {
      "oneOf": [
        {
          "description": "Install via cargo-binstall.",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "cargo-binstall"
            },
            "crate": {
              "description": "Cargo crate name to install.",
              "type": "string"
            },
            "major": {
              "description": "Optional major version constraint (e.g. 1).",
              "type": ["integer", "null"],
              "minimum": 0
            }
          },
          "required": ["type", "crate"]
        },
        {
          "description": "Install from GitHub releases.",
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "const": "github-release"
            },
            "repo": {
              "description": "GitHub repository in \"owner/repo\" format.",
              "type": "string"
            },
            "asset": {
              "description": "Asset filename glob pattern (passed to `gh release download --pattern`).",
              "type": "string"
            },
            "bin": {
              "description": "Optional binary path inside the asset (for archives).",
              "type": ["string", "null"]
            }
          },
          "required": ["type", "repo", "asset"]
        }
      ]
    }
  }
}
