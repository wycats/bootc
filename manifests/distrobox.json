{
  "$schema": "../schemas/distrobox.schema.json",
  "containers": {
    "bootc-dev": {
      "image": "bootc-toolbox:local",
      "packages": [
        "gcc",
        "libatomic"
      ],
      "bins": {
        "from": [
          "~/.cargo/bin",
          "~/.proto/shims"
        ],
        "also": [
          "/usr/local/bin/nu",
          "~/.proto/bin/proto"
        ],
        "to": "~/.local/bin/distrobox"
      },
      "init_hooks": [
        "rustup default stable",
        "rustup update stable",
        "proto install node"
      ],
      "pull": false,
      "init": false,
      "root": false,
      "path": [
        "~/.local/bin",
        "~/.local/bin/distrobox",
        "$PATH"
      ]
    }
  }
}