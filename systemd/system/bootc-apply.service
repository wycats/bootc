[Unit]
Description=Apply bkt manifests after image deployment
# Run after filesystems are mounted and network is available
After=local-fs.target network-online.target
Wants=network-online.target
# Only run if bkt is available
ConditionPathExists=/usr/bin/bkt

[Service]
Type=oneshot
# The script handles deployment detection via marker file
ExecStart=/usr/bin/bootc-apply
RemainAfterExit=yes
# Log output to journal
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
